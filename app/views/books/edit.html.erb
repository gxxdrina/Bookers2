<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>Editing Book</h2>

      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title, size: "50" %>
  
        <h4>Opinion</h4>
        <%= f.text_area :body, size: "50" %><br>
  
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      <% end %>  

      <%= link_to 'Show', book_path(@book.id) %> |
      <%= link_to 'Back', books_path %>

    </div>
  </div>
</div>

