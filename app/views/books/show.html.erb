<!--フラッシュメッセージ-->
<% if flash[:notice] %>
  <div class="alert alert-primary" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">
      <%= render 'users/info', user: @user, book: @books %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class=table>
        <tr>
          <td>
            <p><%= link_to user_path(@book.user.id) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %>
              <% end %>
              </p>
            <p><%= link_to @book.user.name, user_path(@user.id) %></p>
          </td>
          <td><%= link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>
      
        <!--ログインしているユーザーのIDが一致してたら編集可-->
        <% if @user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %></td>
        <% end %>
        </tr>
      </table>
    </div>

  </div>
</div>

