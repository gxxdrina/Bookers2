<% if flash[:notice] %>
  <p class="notice"><%= notice %></p>
<% end %>

<!--ログイン後のページ-->
<div class="container">
  <div class="row">
      
    <div class="col-md-4">
      <%= render 'info', user: @user %>
    </div>

    <div class="col-md-8">
      <h2>Books</h2>
      <table class=table>
        <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
        </tr>
    
      <% @books.each do |book| %>
        <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        </tr> 
      <% end %>
      </table>
    </div>

  </div>
</div>
