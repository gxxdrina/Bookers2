<h1>User info</h1>
<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <!--%= image_tag @user.get_profile_image(100,100) %>-->
  
  <!--ログインしているユーザーのIDが一致してたら編集可-->
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New book</h1>
  <%= form_with model: Book.new do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
